{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["*"]
    },
    "lib": ["es2015", "es2016", "dom"],
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx",
    "test/**/*",
    ".vscode"
  ]
}
